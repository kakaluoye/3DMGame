<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <com.lin.a3gmgame.view.MainChapterFragmentViewpager
            android:id="@+id/main_chapterfragment_vp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.lin.a3gmgame.view.MainChapterFragmentViewpager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="horizontal">

            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/point_shape" />

            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/point_shape" />

            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/point_shape" />
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/main_chapterfragment_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="第几页呢？"
        android:textColor="#ff0000"/>
</LinearLayout>