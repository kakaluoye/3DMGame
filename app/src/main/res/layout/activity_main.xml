<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_welcomebg"
    tools:context="com.lin.a3dmgame.MainActivity">


    <HorizontalScrollView
        android:id="@+id/main_top_hsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_top_banner_bg"
        android:fillViewport="true"
        android:scrollbars="none">

        <RadioGroup
            android:id="@+id/main_top_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/main_top_rb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:paddingRight="15dp"
                android:text="文章首页"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/main_top_rb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:paddingRight="15dp"
                android:text="游戏新闻"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/main_top_rb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:paddingRight="15dp"
                android:text="游戏杂谈"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/main_top_rb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:text="硬件信息"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/main_top_rb5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:text="游戏前瞻"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/main_top_rb6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:text="游戏评测"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/main_top_rb7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:text="原创精品"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/main_top_rb8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:text="游戏盘点"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/main_top_rb9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:text="时事焦点"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/main_top_rb10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:text="攻略中心"
                android:textColor="@color/main_top_rb_textcolor"
                android:textSize="15sp" />
        </RadioGroup>

    </HorizontalScrollView>


    <RadioGroup
        android:id="@+id/main_bottom_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/main_bottom_rb1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/main_bottom_menu"
            android:button="@null"
            android:clickable="true"
            android:drawableTop="@drawable/main_bottom_drawabletop_chapter"
            android:enabled="true"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="文章"
            android:textColor="#fff" />
        <!--enabled为true，还得先写好对应xml文件，，，-->
        <RadioButton
            android:id="@+id/main_bottom_rb2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/main_bottom_menu"
            android:button="@null"
            android:drawableTop="@drawable/main_bottom_drawabletop_forum"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="论坛"
            android:textColor="#fff" />

        <RadioButton
            android:id="@+id/mian_bottom_rb3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/main_bottom_menu"
            android:button="@null"
            android:drawableTop="@drawable/main_bottom_drawabletop_game"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="游戏"
            android:textColor="#fff" />

    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/main_center_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_bottom_rg"
        android:layout_below="@id/main_top_hsv"></android.support.v4.view.ViewPager>

</RelativeLayout>
